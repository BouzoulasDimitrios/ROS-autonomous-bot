<?xml version="1.0" ?>

<launch>
  <!-- Arguments -->
 
  <arg name="map_file" default="$(find rmp_bot_description)/launch/rmp_world.yaml"/>  
  <arg name="move_forward_only" default="true"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find rmp_bot_description)/launch/rmp_amcl.launch"/>

  <!-- move_base -->
  <include file="$(find rmp_bot_description)/launch/movebase.launch">    
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <node 
    pkg="rviz" 
    type="rviz" 
    name="rviz" 
    args="-d $(find rmp_bot_description)/launch/navigation.rviz"
    required="true"    
    
    />  
</launch>
